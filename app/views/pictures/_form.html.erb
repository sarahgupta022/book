<%= simple_form_for([@album, @picture], html: { class: 'form-horizontal', :multipart => true }) do |f| %>
 <%= f.error_notification %>

  <div class="form-inputs">
     <%= f.input :asset, as: :file %><br />
      <%= bootstrap_paperclip_picture f, :asset %>
    <%= f.input :caption, input_html: { class: 'input-xxlarge' } %><br />
    <%= f.input :description, input_html: { class: 'input-xxlarge', rows: 4 }  %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>